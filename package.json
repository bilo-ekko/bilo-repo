{
  "name": "bilo-repo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "docker:build": "turbo run docker:build",
    "docker:push": "turbo run docker:push",
    "k8s:dev:apply": "kubectl apply -k deploy/k8s/dev",
    "k8s:dev:delete": "kubectl delete -k deploy/k8s/dev"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
